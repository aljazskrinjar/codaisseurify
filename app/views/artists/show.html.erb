
<h1><%= @artist.name %></h1>

<p>Age: <%= @artist.age %></p>
<p>Biography: <%= @artist.bio %></p>

<ul id="songlist">
<p>Songs: <% @artist.songs.each do |song| %></p>

<li class="song" id="<%= song.id %>">
  <% ar = @artist.id.to_s %>
  <% sg = song.id.to_s %>
  <%= song.name %>
<button class="btndelete" id="<%=song.name%>" onclick="<%="deleteSong(#{ar},#{sg})" %>">Delete Song</button></li>

<p><% end %></p>
</ul>
<p><%= image_tag @artist.photo.image %></p>

<%= link_to "Delete Artist", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" } %>


<button onclick="<%="deleteAllSongs()"%>">Delete All Songs</button>

<h1>New song</h1>

<%= render 'songs/form' %>
